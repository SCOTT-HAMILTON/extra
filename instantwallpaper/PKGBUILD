_pkgname=instantwallpaper
pkgname=$_pkgname
pkgver=notdoneyet
pkgrel=1
pkgdesc="wallpaper generator for instantOS"
url="https://github.com/instantOS/instantwallpaper"
arch=('i686' 'x86_64')
license=('MIT')
depends=('sh' 'libxinerama' 'libxft' 'feh')
makedepends=('git')
provides=(instantwallpaper)
conflicts=(instantwallpaper)
source=("$_pkgname::git+https://github.com/instantOS/instantWALLPAPER.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%M%d')$(git rev-parse --short HEAD)"
}

prepare() {
    cd $_pkgname
    echo "no prepare"
}

build() {
    cd $_pkgname
    echo "no build"
}

package() {
    cd $_pkgname
    mkdir -p ${pkgdir}/usr/bin
    mkdir -p ${pkgdir}/usr/share/backgrounds
    wget -qO ${pkgdir}/usr/share/backgrounds/instant.png "https://raw.githubusercontent.com/instantOS/instantLOGO/master/wallpaper/defaultwall.png"
    wget -qO ${pkgdir}/usr/share/backgrounds/defaultphoto.png "https://raw.githubusercontent.com/instantOS/instantLOGO/master/wallpaper/defaultphoto.jpg"
    chmod +x *.sh
    mv wall.sh ${pkgdir}/usr/bin/instantwallpaper
}
