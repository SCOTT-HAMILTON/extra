_pkgname=instantdepend
pkgname=$_pkgname
pkgver=20204923be4c9bc
pkgrel=1
pkgdesc="meta package for instantOS dependencies"
url="https://github.com/instantOS/instantMETA"
arch=('i686' 'x86_64')
license=('MIT')
depends=('picom'
    'arc-gtk-theme'
    'xorg-xrandr'
    'slop'
    'xorg-xsetroot'
    'xorg-fonts-misc'
    'autoconf'
    'automake'
    'binutils'
    'bison'
    'fakeroot'
    'flex'
    'gcc'
    'libtool'
    'm4'
    'make'
    'patch'
    'pkgconf'
    'p7zip'
    'dash'
    'tmux'
    'git'
    'subversion'
    'dialog'
    'neovim'
    'fzf'
    'ranger'
    'sl'
    'ffmpeg'
    'feh'
    'mpv'
    'arandr'
    'qt5ct'
    'lxappearance'
    'rofi'
    'conky'
    'dunst'
    'rxvt-unicode'
    'xdotool'
    'wmctrl'
    'xclip'
    'youtube-dl'
    'nautilus'
    'cpio'
    'pavucontrol'
    'zsh'
    'qt5-styleplugins')

makedepends=('bash')
provides=(instantdepend)
conflicts=(instantdepend)
source=("$_pkgname::git+https://github.com/instantOS/instantMETA.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%M%d')$(git rev-parse --short HEAD)"
}

prepare() {
    cd $_pkgname
    echo "no prepare"
}

build() {
    cd $_pkgname
    echo "no build"
}

package() {
    depends+=('yay'
        'wmutils'
        'xdragon'
        'panther_launcher'
        'autojump'
        'paperbash'
        'zsh-syntax-highlighting')

    cd $_pkgname
    mkdir -p ${pkgdir}/usr/share/instantos
    echo 'instantdependpackages' >${pkgdir}/usr/share/instantos/dpackages
}
