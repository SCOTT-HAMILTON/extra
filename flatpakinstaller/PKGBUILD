_pkgname=flatpakinstaller
pkgname=$_pkgname
pkgver=202004292032
pkgrel=1
pkgdesc="a simple installer for flatpaks"
url="https://github.com/instantOS/flatpakinstaller"
arch=('any')
license=('MIT')
depends=('sh' 'flatpak')
makedepends=('git')
provides=(flatpakinstaller)
conflicts=(flatpakinstaller)
source=("$_pkgname::git+https://github.com/instantOS/flatpakinstaller.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%m%d%H%M')"
}

prepare() {
    cd $_pkgname
    echo "no prepare"
}

build() {
    cd $_pkgname
    echo "no build"
}

package() {
    cd $_pkgname
    mkdir -p ${pkgdir}/usr/bin
    mkdir -p ${pkgdir}/usr/share/applications

    chmod +x *.sh
    mv *.sh ${pkgdir}/usr/bin/flatpakinstaller
    mv *.desktop ${pkgdir}/usr/share/applications/

}
