_pkgname=islide
pkgname=$_pkgname
pkgver=fece5ac
pkgrel=1
pkgdesc="slider for instantOS"
url="https://github.com/instantos/islide"
arch=('any')
license=('MIT')
depends=('sh' 'libxinerama' 'libxft')
makedepends=('git')
provides=(islide)
conflicts=(islide)
source=("$_pkgname::git+https://github.com/instantOS/islide.git")

sha256sums=('SKIP')

pkgver() {
  cd $_pkgname
  echo "$(date '+%Y%m%d%H%M')"
}

prepare() {
  cd $_pkgname
  echo "no prepare"
}

build() {
  cd $_pkgname
  make \
    X11INC=/usr/include/X11 \
    X11LIB=/usr/lib/X11
}

package() {
  cd $_pkgname
  env
  echo "pwd"
  pwd
  echo "ls"
  ls -a
  echo ""
  echo "pkdir $pkgdir"
  echo "pkdir $_pkgname"
  make PREFIX=/usr DESTDIR="$pkgdir" install
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
