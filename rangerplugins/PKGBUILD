_pkgname=rangerplugins
pkgname=$_pkgname
pkgver=d400d26
pkgrel=1
pkgdesc="plugins for ranger file manager"
url="https://github.com/ranger/ranger.git"
arch=(any)
license=('MIT')
depends=('ranger')
makedepends=('git')
provides=(rangerplugins)
conflicts=(rangerplugins)

pkgver() {
    echo "$(date '+%Y%M%d')"
}

prepare() {
    cd $_pkgname
    echo "no prepare"
}

build() {
    echo "no build"
}

package() {
    mkdir rangerplugins
    cd rangerplugins

    mkdir -p ${pkgdir}/usr/share/rangerplugins

    git clone --depth=1 https://github.com/alexanderjeurissen/ranger_devicons
    rm -rf ./ranger_devicons/.git
    git clone --depth=1 https://github.com/laggardkernel/ranger-fzf-marks.git
    rm -rf ./ranger-fzf-marks/.git

    mv ./* ${pkgdir}/usr/share/rangerplugins/
}
