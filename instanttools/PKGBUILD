_pkgname=instanttools
pkgname=$_pkgname
pkgver=2020041258757ebd9
pkgrel=1
pkgdesc="development tools for instantOS"
url="https://github.com/instantOS/instanttools"
arch=('any')
license=('MIT')
depends=('sh' 'python')
makedepends=('git')
provides=(instanttools)
conflicts=(instanttools)
source=("$_pkgname::git+https://github.com/instantOS/instantTOOLS.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%m%H%M')$(git rev-parse --short HEAD)"
}

prepare() {
    cd $_pkgname
    echo "no prepare"
}

build() {
    cd $_pkgname
    echo "no build"
}

package() {
    cd $_pkgname
    mkdir -p ${pkgdir}/usr/bin
    mkdir -p ${pkgdir}/usr/share/instanttools

    chmod 755 *.sh
    chmod 755 *.py
    chmod 755 utils/*.sh

    mv ibuild.sh ${pkgdir}/usr/bin/ibuild
    mv pkgparse.py ${pkgdir}/usr/bin/pkgparse
    mv utils/* ${pkgdir}/usr/share/instanttools/

}
