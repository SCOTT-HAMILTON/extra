_pkgname=instantshell
pkgname=$_pkgname
pkgver=20204208429760e
pkgrel=1
pkgdesc="zsh shell config for instantOS"
url="https://github.com/instantOS/instantSHELL"
arch=('i686' 'x86_64')
license=('MIT')
depends=('sh')
makedepends=('git')
provides=(instantshell)
conflicts=(instantshell)
source=("$_pkgname::git+https://github.com/instantOS/instantshell.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%M%d')$(git rev-parse --short HEAD)"
}

prepare() {
    cd $_pkgname
    echo "no prepare"
}

build() {
    cd $_pkgname
    echo "no build"
}

package() {
    cd $_pkgname
    bash fetch.sh
    mkdir -p ${pkgdir}/usr/share/instantshell
    mkdir -p ${pkgdir}/usr/bin

    cat zshrc >>./ohmyzsh/templates/zshrc.zsh-template
    rm zshrc

    chmod +x install.sh
    mkdir -p ./ohmyzsh/plugins/instantos
    mkdir -p ./ohmyzsh/themes
    mv instantos.zsh-theme ./ohmyzsh/themes/
    mv instantos.plugin.zsh ./ohmyzsh/plugins/instantos/

    mv install.sh ${pkgdir}/usr/bin/instantshell
    mv ohmyzsh/* ${pkgdir}/usr/share/instantshell
}
