_pkgname=instantos
pkgname=$_pkgname
pkgver=9851542
pkgrel=1
pkgdesc="meta package for instantOS"
url="https://github.com/instantOS/instantMETA"
arch=('i686' 'x86_64')
license=('MIT')
depends=('git')

makedepends=('bash')
provides=(instantos)
conflicts=(instantos)
source=("$_pkgname::git+https://github.com/instantOS/instantMETA.git")

sha256sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(date '+%Y%M%d')$(git rev-parse --short HEAD)"
}

prepare() {
    cd $_pkgname
    echo "no prepare"
}

build() {
    cd $_pkgname
    echo "no build"
}

package() {

    depends+=('instantdotfiles'
        'instantutils'
        'instantwallpaper'
        'instantassist'
        'instantthemes'
        'instantwidgets'
        'instantcursors'
        'instantshell'
        'instantwm-arc'
        'instantlock-arc'
        'instantmenu-arc')
        
    cd $_pkgname

    mkdir -p ${pkgdir}/usr/share/instantos
    echo 'instantpackages' >${pkgdir}/usr/share/instantos/packages
}
